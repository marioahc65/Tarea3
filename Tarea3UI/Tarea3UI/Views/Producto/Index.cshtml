@model IEnumerable<Tarea3UI.Models.Producto>

@{
    ViewData["Title"] = "Iventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Iventario</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroLote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFabricacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCaducidad)
            </th>
            <th>
                @Html.DisplayName("Nombre del proveedor")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductoId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                <a 
                asp-action="Details" 
                asp-controller="Producto" 
                asp-route-id="@item.NumeroLote"
                data-toggle="tooltip"
                data-placement="top"
                title="Ver detalles"
                >@item.Nombre</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroLote)
            </td>
                <td class="@(item.Cantidad ==0 ? "bg-danger text-white font-weight-bold" :"")">
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFabricacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCaducidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-Id="@item.NumeroLote">
                        <i class="bi bi-pencil-square"></i>
                        Modificar
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
